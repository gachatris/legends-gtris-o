{
	"title_lang": "fsw_update_notes",
	"prevent_default": true,
	"dpad_behavior": "smooth_vertical",
	"scroll_vertical": "scroller",
	
	"element": {
		"tag": "gtris-div",
		"attributes": {
			"font_size": 0.9,
			"width": 100,
			"height": 100,
			"width_type": 1,
			"height_type": 1,
			"style": {
				"display": "flex",
				"flex-direction": "column",
				"justify-content": "center",
				"align-items": "center",
				"position": "relative",
				"overflow": "hidden hidden"
			}
		},
		"children": [
		{
			"tag": "gtris-div",
			"id": "scroller",
			"attributes": {
				"font_size": 0.9,
				"width": 100,
				"height": 75,
				"width_type": 1,
				"height_type": 1,
				
				"style": {
					"padding": "1em 1em 1em 1em",
					"display": "block",
					"position": "relative",
					"overflow": "hidden scroll"
				}
			},
			"children": [
			{
				"tag": "gtris-load-text",
				"load_text_lang": "fsw/changelog.txt",
				"markdown": true,
				"attributes": {
					"font_size": 0.9,
					"width": 100,
					"width_type": 1,
					"style": {
						"display": "block",
						"position": "relative",
						"overflow": "hidden scroll"
					}
				}
			}]
		},
		{
			"tag": "gtris-m",
			"attributes": {
				"id": "m",
				"width": 100,
				"height": 25,
				"width_type": 1,
				"height_type": 1,
				"style": {
					"background": "#8f93",
					"display": "flex",
					"position": "relative",
					"flex-direction": "row",
					"justify-content": "center",
					"align-items": "flex-start"
				}
			},
			"children": [
			{
				"tag": "gtris-button",
				"attributes": {
					"font_size": 1,
					"width": 40,
					"height": 1.5,
					"width_type": 1,
					"height_type": 0,
					"selectable_horizontal": "0",
					"style": {
						"display": "flex",
						"position": "relative",
						"justify-content": "center",
						"align-items": "center",
						"border": "3px solid #000",
						"background": "#ddd"
					},
					"event_functions": {
						"hoverin": "__this.style.background = \"#a3a\";",
						"hoverout": "__this.style.background = \"#ddd\";",
						"mouseover": "__hover();",
						"select": "__fsw.functions.Changelog.full();"
					},
					
					"event_listeners": {
						"mouseover": "mouseover",
						"click": "select"
					}
				},
				"children": [
				{
					"tag": "gtris-button-text",
					"text_lang": "fsw_patch_notes_full",
					"attributes": {
						"font_size": 0.8,
						"style": {
							"width": "auto",
							"height": "auto",
							"position": "absolute"
						}
					}
				}]
			},
			{
				"tag": "gtris-button",
				"attributes": {
					"font_size": 0.8,
					"width": 20,
					"height": 1.5,
					"width_type": 1,
					"height_type": 0,
					"selectable_horizontal": "1default",
					"style": {
						"display": "flex",
						"position": "relative",
						"justify-content": "center",
						"align-items": "center",
						"border": "3px solid #000",
						"background": "#ddd"
					},
					"event_functions": {
						"hoverin": "__this.style.background = \"#a3a\";",
						"hoverout": "__this.style.background = \"#ddd\";",
						"mouseover": "__hover();",
						"select": "__fsw.functions.Changelog.close();"
					},
					
					"event_listeners": {
						"mouseover": "mouseover",
						"click": "select"
					}
				},
				"children": [
				{
					"tag": "gtris-button-text",
					"text_lang": "fsw_patch_notes_close",
					"attributes": {
						"font_size": 1,
						"style": {
							"position": "absolute"
						}
					}
				}]
			}]
		}]
	}
}